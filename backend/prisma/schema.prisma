generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Operator {
  id        Int      @id @default(autoincrement())
  name      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  clients   Client[]
}

model Client {
  id         Int      @id @default(autoincrement())
  name       String
  birth_date String
  value      Int
  email      String   @unique
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
  operator   Operator @relation(fields: [operatorId], references: [id])
  operatorId Int
}
